! /etc/keepalived/keepalived.conf
! Configuration File for keepalived
global_defs {
    router_id LVS_DEVEL
    enable_script_security
}
vrrp_script check_apiserver {
  script "/etc/keepalived/check_apiserver.sh"
  interval 3
  weight -2
  fall 10
  rise 2
}

vrrp_instance VI_1 {
{% if inventory_hostname == groups.master[0] %}
    state MASTER
{% else %}
    state BACKUP
{% endif %}
    
    interface eth1
    virtual_router_id 51
    priority 100
    authentication {
        auth_type PASS
        auth_pass 42
    }
    virtual_ipaddress {
        {{ apiserver_vip }}
    }
    track_script {
        check_apiserver
    }
}